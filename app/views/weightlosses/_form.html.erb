<%= form_with model: @weightloss, local: true do |f| %>
<% if @weightloss.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@weightloss.errors.count, "error") %> </h2>

    <ul>
    <% @weightloss.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <div class="field">
    <%= f.label :weight, "体重(kg)" %><br />
    <%= f.text_field :weight, class: :form__text, id: "weightloss_weight" %>
  </div>

  <div class="field">
  <%= f.label :sleep, "睡眠時間(h)" %><br />
  <%= f.select :sleep, options_for_select((0..24).step(0.5).map { |t| ["#{t}h", t] }, @weightloss.sleep), {}, { class: 'form__dropdown', id: 'weightloss_sleep' } %>
 </div>

  <div class="field">
    <%= f.label :faigue, "起床時の疲労度" %><br />
    <%= f.select :faigue, options_for_select((0..5).map { |t| ["#{t}", t] }, @weightloss.faigue), {}, class: 'form__dropdown', id: 'weightloss_faigue' %>
  </div>

  <div class="field">
    <%= f.label :exercise, "運動内容", rows: "10" %><br />
    <%= f.text_area :exercise, id: "weightloss_exercise" %>
  </div>

  <div class="field">
    <%= f.label :meal, "食事内容", rows: "10" %><br />
    <%= f.text_area :meal, id: "weightloss_meal" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>