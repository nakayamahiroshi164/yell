<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

       <%# ログイン時のエラーメッセージ  %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id: "user_email", autofocus: true, autocomplete: "email" %>
          <% if @user.errors[:email].any? %>
            <p class="error-message"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（半角数字6字以上30字以内）" %><br />
          <%= f.password_field :password, id: "user_password", autocomplete: "current-password" %>
          <% if @user.errors[:password].any? %>
            <p class="error-message"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>